id: cpc_secondary_driver_spi_usart
package: platform
description: SPI driver over USART peripheral for Co-Processor Communication (CPC) Secondary Device.
label: CPC Secondary - SPI (USART)
category: Services|Co-Processor Communication|Secondary Device|Driver
quality: production
root_path: platform/service/cpc
instantiable:
  prefix: inst
config_file:
  - path: config/s0/sl_cpc_drv_secondary_spi_usart_{{instance}}_config.h
    file_id: cpc_drv_secondary_spi_usart_config
    condition: [device_series_0]
  - path: config/s1/sl_cpc_drv_secondary_spi_usart_{{instance}}_config.h
    file_id: cpc_drv_secondary_spi_usart_config
    condition: [device_series_1]
  - path: config/s2/sl_cpc_drv_secondary_spi_usart_{{instance}}_config.h
    file_id: cpc_drv_secondary_spi_usart_config
    condition: [device_series_2]
source:
  - path: src/sl_cpc_drv_secondary_spi_usart.c
provides:
  - name: cpc_driver
  - name: cpc_secondary_driver_spi_usart_interface
  - name: cpc_secondary_driver
    allow_multiple: false
  - name: cpc_secondary_driver_spi      # Keep it for backward compatibility
    allow_multiple: false
  - name: cpc_secondary_driver_spi_usart
    allow_multiple: false
requires:
  - name: status
  - name: gpiointerrupt
  - name: dmadrv
  - name: emlib_gpio
  - name: emlib_cmu
  - name: emlib_usart
  - name: slist
  - name: spidrv_core
  - name: cpc_core
  - name: cpc_secondary
template_file:
  - path: template/s0_s1/sl_cpc_drv_secondary_spi_config.h.jinja
    condition: [device_series_0]
  - path: template/s0_s1/sl_cpc_drv_secondary_spi_config.h.jinja
    condition: [device_series_1]
  - path: template/s2/sl_cpc_drv_secondary_spi_config.h.jinja
    condition: [device_series_2]
template_contribution:
  - name: cpc_instance_name
    value: "{{instance}}"
  - name: cpc_interface_type
    value: spi
  - name: cpc_periph_type
    value: usart